<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd">
    
    <context:component-scan base-package="icu.sunnyc.rpc.demo.client"/>
    
    <context:property-placeholder location="classpath:simple-rpc.properties"/>
    
    <!-- 配置服务发现组件 -->
    <bean id="serviceDiscovery" class="icu.sunnyc.rpc.core.client.ServiceDiscovery">
        <constructor-arg name="registryAddress" value="${registry.address}"/>
    </bean>
    
    <!-- 配置 RPC 代理 -->
    <bean id="rpcProxy" class="icu.sunnyc.rpc.core.client.RpcProxy">
        <constructor-arg name="serviceDiscovery" ref="serviceDiscovery"/>
    </bean>

</beans>